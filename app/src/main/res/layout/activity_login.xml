<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#D8D8D8"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="134dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/ic_logomyhome2"
            android:layout_height="match_parent"
            android:id="@+id/imageView2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtUsuari"
            android:layout_weight="1"
            android:selectAllOnFocus="false"
            android:hint="Usuari"
             />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword"
            android:hint="Contrasenya" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="0.91"
        android:weightSum="1"
        android:id="@+id/botonsLogin"
        android:background="#D8D8D8">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/Login"
            android:focusableInTouchMode="true"
            android:src="@drawable/ic_btnlogin"
            android:background="#D8D8D8"
            android:layout_weight="0.94" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/crearCompte"
            android:src="@drawable/ic_btnregistre"
            android:background="#D8D8D8" />

    </LinearLayout>
</LinearLayout>
