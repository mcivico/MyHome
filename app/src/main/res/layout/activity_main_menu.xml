    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.marc.turismeolot.MenuPrincipal"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="69dp"
